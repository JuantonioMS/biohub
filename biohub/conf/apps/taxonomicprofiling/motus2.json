{
    "info" : {
        "type" : "conda",
        "environment": "biohub.motus2"
    },

    "build": [
        "mamba create -y -p ->eval##self.environment<- motus",
        ". ->eval##self.condaShell<- && conda activate ->eval##self.environment<- && motus downloadDB"
    ],

    "implementation" : {

        "defaultRoute": "paired illumina",

        "commands": [
            {
                "route": "common",
                "command": "motus profile"
            }
        ],

        "sentences": {

            "body" : [
                {
                    "route" : "common",
                    "sentences" : ["<command> <inputs> <outputs> <options>"]
                }
            ]

        }
    },

    "options": [

        {
            "route": "common",
            "role": "threads",
            "name": "-t"
        },

        {
            "route": "common",
            "role": "NCBI taxonomy flag",
            "name": "-p",
            "value": true
        }

    ],

    "inputs": [
        {
            "route": "paired illumina",
            "role": "forward",
            "name" : "-f",
            "selection": [
                {
                    "target": "outlines",
                    "required": ["reads", "forward", "no host"]
                }
            ]
        },
        {
            "route": "paired illumina",
            "role": "reverse",
            "name" : "-r",
            "selection": [
                {
                    "target": "outlines",
                    "required": ["reads", "reverse", "no host"]
                }
            ]
        }

    ],

    "outputs": [
        {
            "route": "common",
            "role": "output",
            "name": "-o",
            "temporal": "output.tsv",
            "extension": ".tsv",
            "outlines": ["taxonomic classification"]
        }
    ]
}