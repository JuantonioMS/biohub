{
    "info" : {
        "type" : "anaconda",
        "environment": "biohub.quast"
    },

    "build": [
        "conda create -y -p ->eval##self.environment<- quast"
    ],

    "implementation" : {

        "defaultRoute": "genome",

        "commands": [
            {
                "route": "common",
                "command": "quast"
            }
        ],

        "sentences": {

            "body" : [
                {
                    "route" : "common",
                    "sentences" : ["<command> <options> <inputs>"]
                }
            ]

        }
    },

    "options": [
        {
            "route": "common",
            "role": "threads",
            "name": "--threads",
            "alternativeName": "-t"
        },

        {
            "route": "common",
            "role": "outputDirectory",
            "name": "--output-dir",
            "alternativeName": "-o"
        }
    ],

    "inputs": [
        {
            "route": "genome",
            "role": "genome",
            "selection": [
                {
                    "target": "outlines",
                    "required": ["genome"]
                }
            ]
        }
    ],

    "outputs": [

        {
            "route": "genome",
            "role": "report",
            "temporal": "report.tsv",
            "extension": ".tsv"
        }
    ],

    "outlines": [
        {
            "route": "common",
            "output": ["assembly quality"],
            "process": ["assembly quality"]
        }
    ]
}