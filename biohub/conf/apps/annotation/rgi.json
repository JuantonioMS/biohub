{
    "info" : {
        "type" : "anaconda",
        "environment": "biohub.rgi"
    },

    "build": [
        "mamba create -y -p ->eval##self.environment<- rgi",
        "wget https://card.mcmaster.ca/latest/data -O ->eval##self.environment<-/data",
        "tar -xvf ->eval##self.environment<-/data --directory ->eval##self.environment<-",
        ". ->eval##self.condaShell<- && conda activate ->eval##self.environment<- && rgi load --card_json ->eval##self.environment<-/card.json"
    ],

    "implementation" : {

        "defaultRoute": "common",

        "commands": [
            {
                "route": "common",
                "command": "rgi main"
            }
        ],

        "sentences": {

            "start" : [
                {
                    "route" : "common",
                    "orders" : []
                }
            ],

            "middle" : [
                {
                    "route" : "common",
                    "orders" : ["<command> <options> <inputs>"]
                }
            ],

            "end" : [
                {
                    "route" : "common",
                    "orders" : []
                }
            ]

        }

    },

    "options": [

        {
            "route": "common",
            "role": "outputDirectory",
            "name": "--output_file",
            "alternativeName": "-o",
            "value": "->eval##self.temporalDirectory<-/output"
        },

        {
            "route": "common",
            "role": "threads",
            "name": "--num_threads",
            "alternativeName": "-n"
        },

        {
            "route": "common",
            "role": "clean temporal files",
            "name": "--clean",
            "value": true
        }

    ],

    "inputs": [
        {
            "route": "common",
            "role": "genome",
            "name": "--input_sequence",
            "alternativeName": "-i",
            "selection": [
                {
                    "target": "outlines",
                    "required": ["genome"]
                }
            ]
        }
    ],

    "outputs": [
        {
            "route": "common",
            "role": "json format",
            "temporal": "output.json",
            "extension": ".json",
            "outlines": ["card", "json"]
        },

        {
            "route": "common",
            "role": "txt format",
            "temporal": "output.txt",
            "extension": ".txt",
            "outlines": ["card", "txt"]
        }
    ],

    "outlines": [
        {
            "route": "common",
            "output": ["resistance genes"],
            "process": ["resistance genes"]
        }
    ]
}