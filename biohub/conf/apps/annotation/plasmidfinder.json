{
    "info" : {
        "type" : "conda",
        "environment": "biohub.plasmidfinder"
    },

    "build": [
        "mamba create -y -p ->eval##self.environment<- plasmidfinder"
    ],

    "implementation" : {

        "defaultRoute": "genome",

        "commands": [
            {
                "route": "common",
                "command": "plasmidfinder.py"
            }
        ],

        "sentences": {

            "body" : [
                {
                    "route" : "common",
                    "sentences" : ["<command> <options> <inputs>"]
                }
            ]

        }

    },

    "options": [
        {
            "route": "common",
            "role": "outputDirectory",
            "name": "--outputPath",
            "altName": "-o"
        }
    ],

    "inputs": [
        {
            "route": "genome",
            "role": "genome",
            "name": "--infile",
            "selection": [
                {
                    "target": "outlines",
                    "required": ["genome"]
                }
            ]
        }
    ],

    "outputs": [
        {
            "route": "genome",
            "role": "plasmid hits",
            "temporal": "data.json",
            "extension": ".json"
        }
    ],

    "outlines": [
        {
            "route": "common",
            "output": ["plasmids"],
            "process": ["plasmids"]
        }
    ]
}